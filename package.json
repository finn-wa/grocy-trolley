{
  "version": "1.5.0",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "node ./out/main.js",
    "gt": "node ./out/main.js",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js -t dev --sourcemap",
    "build:prod": "node scripts/build.js -t prod",
    "build:watch": "node scripts/build.js -t dev --watch",
    "test": "node scripts/build.js -t test",
    "test:watch": "node scripts/build.js -t test --watch",
    "test:debug": "node scripts/build.js -t test --sourcemap",
    "typecheck": "tsc -w",
    "updateTaggunTypes": "openapi-typescript https://api.taggun.io/docs/swagger.json --output ./src/openapi/taggun.d.ts",
    "updateGrocyTypes": "openapi-typescript src/openapi/grocy.openapi.yaml --output ./src/openapi/grocy.d.ts"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.1.0",
    "dotenv": "^16.0.0",
    "formdata-node": "^4.3.2",
    "node-fetch": "^3.2.2",
    "node-html-parser": "^5.2.0",
    "prompts": "^2.4.2",
    "ts-node": "^10.7.0",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@types/jasmine": "^4.0.0",
    "@types/node": "^16.11.26",
    "@types/prompts": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "esbuild": "^0.14.28",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "fast-glob": "^3.2.11",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "openapi-typescript": "5.2.0",
    "organize-imports-cli": "^0.9.0"
  },
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": "^18"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jasmine": {
    "spec_dir": "out",
    "spec_files": [
      "**/*[sS]pec.js"
    ],
    "helpers": [
      "helpers/**/*.js"
    ],
    "env": {
      "stopSpecOnExpectationFailure": false,
      "random": true
    }
  }
}
