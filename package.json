{
  "version": "1.1.0",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "node ./out/main.js",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js -t dev",
    "build:prod": "node scripts/build.js -t prod",
    "build:watch": "node scripts/build.js -t dev --watch",
    "test": "node scripts/build.js -t test",
    "test:watch": "node scripts/build.js -t test --watch",
    "test:debug": "node scripts/build.js -t test --sourcemap",
    "typecheck": "tsc -w",
    "updateTaggunTypes": "openapi-typescript https://api.taggun.io/docs/swagger.json --output ./src/openapi/taggun.d.ts",
    "updateGrocyTypes": "openapi-typescript src/openapi/grocy.openapi.yaml --output ./src/openapi/grocy.d.ts"
  },
  "dependencies": {
    "commander": "^9.0.0",
    "dotenv": "^16.0.0",
    "form-data": "4.0.0",
    "node-fetch": "2.6.6",
    "playwright": "1.17.1",
    "prompts": "^2.4.2",
    "ts-node": "^10.4.0",
    "typescript": "4.5.4"
  },
  "devDependencies": {
    "@types/jasmine": "^3.10.3",
    "@types/node": "^16.11.25",
    "@types/node-fetch": "2",
    "@types/prompts": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "esbuild": "^0.14.18",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "fast-glob": "^3.2.11",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "openapi-typescript": "5.1.1"
  },
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": "^18"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jasmine": {
    "spec_dir": "out",
    "spec_files": [
      "**/*[sS]pec.js"
    ],
    "helpers": [
      "helpers/**/*.js"
    ],
    "env": {
      "stopSpecOnExpectationFailure": false,
      "random": true
    }
  }
}
