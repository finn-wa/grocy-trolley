{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./out-ts",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": { "@gt/*": ["./src/*"] }
  }
}
