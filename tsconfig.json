{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": { "@gt/*": ["./*"] },
    "typeRoots": ["node_modules/@types", "src/types"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "build/out-ts",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["**/__snapshots"]
}
